{
    "editor.lineNumbers": "relative",
    "editor.wordWrap": "on",
    "zenMode.centerLayout": false, 
    "zenMode.hideLineNumbers": false,
    "zenMode.showTabs": "single",
    "zenMode.fullScreen": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontFamily": "JetBrainsMono Nerd Font, 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "workbench.colorTheme": "Tokyo Night",
    "vim.leader": "<space>",
    "vim.normalModeKeyBindings": [
    {
      "before": ["g", "p", "d"],
      "commands": ["editor.action.peekDefinition"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    {
      "before": ["g", "I"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "p", "i"],
      "commands": ["editor.action.peekImplementation"]
    },
    {
      "before": ["g", "q"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["g", "r"],
      // "commands": ["editor.action.referenceSearch.trigger"],
      "commands": ["references-view.findReferences"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["g", "p", "t"],
      "commands": ["editor.action.peekTypeDefinition"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    {
      "before": ["<leader>", ","],
      "commands": ["workbench.action.showAllEditorsByMostRecentlyUsed"]
    },
    {
      "before": ["<leader>", "s", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "s", "g"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.actions.view.problems"]
    },
    {
      "before": ["<leader>", "g", "s"],
      "commands": ["workbench.view.scm"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "h", "s"],
      "commands": ["git.stage"]
      // "commands": ["git.stageSelectedRanges"]
    },
    
    {
      "before": ["<leader>", "h", "R"],
      "commands": ["git.revertChange"]
    },
    {
      "before": ["<leader>", "h", "b"],
      "commands": ["gitlens.toggleFileBlameInDiffLeft"]
    },
    {
      "before": ["<leader>", "h", "d"],
      "commands": ["gitlens.diffLineWithPrevious"]
    },
    {
      "before": ["<leader>", "h", "p"],
      "commands": ["editor.action.dirtydiff.next"]
      // "commands": ["gitlens.diffLineWithPrevious"]
    },
    {
      "before": ["<leader>", "T"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "t", "T"],
      "commands": ["workbench.action.closeAllEditors"]
    },
    {
      "before": ["<leader>", "H"],
      "commands": ["vscode-harpoon.addEditor"]
    },
    {
      "before": ["<leader>", "h", "e"],
      "commands": ["vscode-harpoon.editEditors"]
    },
    {
      "before": ["<leader>", "h", "h"],
      "commands": ["vscode-harpoon.editorQuickPick"]
    },
    {
      "before": ["<leader>", "1"],
      "commands": ["vscode-harpoon.gotoEditor1"]
    },
    {
      "before": ["<leader>", "2"],
      "commands": ["vscode-harpoon.gotoEditor2"]
    },
    {
      "before": ["<leader>", "3"],
      "commands": ["vscode-harpoon.gotoEditor3"]
    },
    {
      "before": ["<leader>", "4"],
      "commands": ["vscode-harpoon.gotoEditor4"]
    },
    {
      "before": ["<C-h>"], // Focus split window at left
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["<C-j>"], // Focus split window at right
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["<C-k>"], // Focus split window at above
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["<C-l>"], // Focus split window at below
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["]", "c"], // Jump to next Git change
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["[", "c"], // Jump to previous Git change
      "commands": ["workbench.action.editor.previousChange"]
    },
    {
      "before": ["<leader>", "o"],
      "commands": ["workbench.action.output.toggleOutput"]
    },
    {
      "before": ["<leader>", "t", "t"],
      "commands": ["workbench.action.terminal.focus"]
    },
    {
      "before": ["<leader>", "t", "e"],
      "commands": ["dotnet-test-explorer.showExplorer"]
    },
    {
      "before": ["<leader>", "n", "f"],
      "commands": ["workbench.action.files.saveWithoutFormatting"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-d>"],
      "after": ["<C-d>", "z", "z"]
    },
    {
      "before": ["<C-u>"],
      "after": ["<C-u>", "z", "z"]
    },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["u"],
      "after": ["git.unstageSelectedRanges"]
    },
    {
      "before": ["r"],
      "command": ["git.revertSelectedRanges"]
    },
    {
      "before": ["s"],
      "commands": ["git.stageSelectedRanges"]
    }
  ],
  "diffEditor.hideUnchangedRegions.enabled": true,
}