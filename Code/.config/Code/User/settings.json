{
  "editor.lineNumbers": "relative",
  "editor.wordWrap": "on",
  "editor.fontFamily": "JetBrainsMono Nerd Font, 'Droid Sans Mono', 'monospace', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "zenMode.centerLayout": true, 
  "zenMode.hideLineNumbers": false,
  "zenMode.showTabs": "single",
  "zenMode.fullScreen": false,
  "zenMode.hideStatusBar": false,
  "zenMode.hideActivityBar": true,
  "zenMode.restore": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "search.mode": "newEditor",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontLigatures.enabled": true,
  "workbench.colorTheme": "Tokyo Night",
  "workbench.panel.opensMaximized": "always",
  "workbench.startupEditor": "none",
  "vim.leader": "<space>",
  "vim.showMarksInGutter": true,
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(59, 119, 172, 0.5)",
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "H"],
      "commands": ["vscode-harpoon.addEditor"]
    },
    {
      "before": ["<leader>", "h", "e"],
      "commands": ["vscode-harpoon.editEditors"]
    },
    {
      "before": ["<leader>", "h", "h"],
      "commands": ["vscode-harpoon.editorQuickPick"]
    },
    {
      "before": ["<leader>", "1"],
      "commands": ["vscode-harpoon.gotoEditor1"]
    },
    {
      "before": ["<leader>", "2"],
      "commands": ["vscode-harpoon.gotoEditor2"]
    },
    {
      "before": ["<leader>", "3"],
      "commands": ["vscode-harpoon.gotoEditor3"]
    },
    {
      "before": ["<leader>", "4"],
      "commands": ["vscode-harpoon.gotoEditor4"]
    },
    {
      "before": ["<C-h>"], // Focus split window at left
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["<C-j>"], // Focus split window at right
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["<C-k>"], // Focus split window at above
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["<C-l>"], // Focus split window at below
      "commands": ["workbench.action.focusRightGroup"]
    },
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-d>"],
      "after": ["<C-d>", "z", "z"]
    },
    {
      "before": ["<C-u>"],
      "after": ["<C-u>", "z", "z"]
    },
    {
      "before": ["<leader>", "h", "d"],
      "commands": ["git.openChange", "workbench.action.focusActiveEditorGroup"],
    },
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y"]
    },
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y"]
    },
    {
      "before": ["<leader>", "P"],
      "after": ["\"", "+", "p"]
    },
    {
      "before": ["<leader>", "Y"],
      "after": ["\"", "+", "Y"]
    },
    {
      "before": ["<leader>", "n", "f"],
      "commands": ["workbench.action.files.saveWithoutFormatting"]
    },
    {
      "before": ["<leader>", "n"],
      "commands": ["notifications.showList"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["editor.debug.action.toggleBreakpoint"]
    },
    {
      "before": ["<leader>", "o"],
      "commands": ["workbench.action.output.toggleOutput"]
    },
    {
      "before": ["<leader>", ";"],
      // "before": ["<leader>", "t", "t"],
      "commands": ["workbench.action.terminal.focus"]
    },
    {
      "before": ["<leader>", "t", "e"],
      "commands": ["dotnet-test-explorer.showExplorer"]
    },
    {
      "before": ["]", "c"], // Jump to next Git change
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["[", "c"], // Jump to previous Git change
      "commands": ["workbench.action.editor.previousChange"]
    },
    {
      "before": ["g", "p", "d"],
      "commands": ["editor.action.peekDefinition"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    {
      "before": ["g", "I"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "p", "i"],
      "commands": ["editor.action.peekImplementation"]
    },
    {
      "before": ["g", "q"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["g", "r"],
      // "commands": ["editor.action.referenceSearch.trigger"],
      "commands": ["references-view.findReferences"]
    },
    {
      "before": ["g", "R"],
      "commands": ["editor.action.referenceSearch.trigger"],
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["g", "D"],
      "commands": ["editor.action.goToDefinition"]
    },
    {
      "before": ["g", "p", "t"],
      "commands": ["editor.action.peekTypeDefinition"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    {
      "before": ["<leader>", ","],
      "commands": ["workbench.action.showAllEditorsByMostRecentlyUsed"]
    },
    {
      "before": ["<leader>", "s", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "s", "g"],
      "commands": ["workbench.action.findInFiles"]
      // "commands": ["workbench.action.quickTextSearch"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.actions.view.problems"]
    },
    {
      "before": ["<leader>", "g", "s"],
      "commands": ["workbench.view.scm"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "h", "S"],
      "commands": ["git.stage"]
    },
    {
      "before": ["<leader>", "h", "R"],
      "commands": ["git.unstage"]
    },
    {
      "before": ["<leader>", "h", "b"],
      "commands": ["gitlens.toggleFileBlameInDiffLeft"]
    },
    {
      "before": ["<leader>", "h", "D"],
      "commands": ["gitlens.diffLineWithPrevious"]
    },
    {
      "before": ["<leader>", "h", "p"],
      "commands": ["editor.action.dirtydiff.next"]
    },
    {
      "before": ["<leader>", "T"],
      "commands": ["workbench.action.closeActiveEditor", "workbench.action.focusActiveEditorGroup"]
    },
    {
      "before": ["<leader>", "t", "T"],
      "commands": ["workbench.action.closeOtherEditors"]
      // "commands": ["workbench.action.closeAllEditors"]
    },
    {
      "before": ["<leader>", "d", "f"],
      "commands": ["workbench.files.action.compareFileWith", "workbench.action.focusActiveEditorGroup"]
    },
    {
      "before": ["<leader>", "d", "c"],
      "commands": ["workbench.files.action.compareWithClipboard", "workbench.action.focusActiveEditorGroup"]
    },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      // "before": ["u"],
      // unfortunately this only works in diff editor
      "before": ["<leader>", "h", "u"],
      "commands": ["git.unstageSelectedRanges"]
    },
    {
      // "before": ["r"],
      "before": ["<leader>", "h", "r"],
      "commands": ["git.revertSelectedRanges"]
    },
    {
      // "before": ["s"],
      "before": ["<leader>", "h", "s"],
      "commands": ["git.stageSelectedRanges"]
    },
    {
      // paste without overwriting unamed buffer
      "before": ["<leader>", "p"],
      "after": ["\"", "_", "d", "P"]
    },
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y"]
    },
    {
      "before": ["<leader>", "P"],
      "after": ["\"", "+", "p"]
    },
    {
      "before": ["<leader>", "l", "l"],
      "commands": ["gitlens.copyRemoteFileUrlToClipboard"]
    }
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-u>"],
      "after": []
    }
  ],
}
